{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "no-console": [
      false
    ],
    "curly": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^on"
      }
    ],
    "max-classes-per-file": [
      false
    ],
    "ordered-imports": [
      false
    ],
    "arrow-parens": false,
    "array-type": [
      true,
      "generic"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "align": [
      true,
      "statements"
    ]
  }
}